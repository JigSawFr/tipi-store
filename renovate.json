{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "schedule": [
    "* */1 * * *"
  ],
  "timezone": "Europe/Paris",
  "automergeStrategy": "rebase",
  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.*docker-compose\\.json$/"
      ],
      "matchStrings": [
        "\"image\": \"(?<depName>.*?):(?<currentValue>.*?)\","
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchFileNames": [
        "apps/**"
      ],
      "groupName": "{{packageFileDir}}",
      "groupSlug": "app-{{packageFileDir}}"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "addLabels": [
        "ready-to-merge"
      ],
      "assignees": [
        "JigSawFr"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "breaking-change",
        "ready-to-review"
      ],
      "reviewers": [
        "JigSawFr"
      ],
      "assignees": [
        "JigSawFr"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "^lscr\\.io/linuxserver/.*",
        "^ghcr\\.io/linuxserver/.*"
      ],
      "versioning": "semver",
      "allowedVersions": "/^\\d+\\.\\d+\\.\\d+(-ls\\d+)?$/"
    },
    {
      "matchPackageNames": [
        "mariadb",
        "mysql",
        "mongodb",
        "postgres",
        "redis"
      ],
      "enabled": false
    }
  ]
}