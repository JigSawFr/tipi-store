{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "image": "ghcr.io/henrygd/beszel/beszel-agent:0.16.1",
      "name": "beszel-agent",
      "isMain": true,
      "internalPort": 45876,
      "environment": [
        {
          "key": "PORT",
          "value": 45876
        },
        {
          "key": "KEY",
          "value": "${BESZEL_AGENT_KEY}"
        }
      ],
      "networkMode": "host",
      "volumes": [
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock",
          "readOnly": true
        }
      ]
    }
  ]
}
