{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "image": "ghcr.io/sirrobot01/decypharr:v1.1.6",
      "name": "decypharr",
      "isMain": true,
      "internalPort": "8282",
      "capAdd": [
        "SYS_ADMIN"
      ],
      "devices": [
        "/dev/fuse:/dev/fuse:rwm"
      ],
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "healthCheck": {
        "test": "/usr/bin/healthcheck --config /app/",
        "interval": "10s",
        "timeout": "10s",
        "retries": 3
      },
      "securityOpt": [
        "apparmor:unconfined"
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app"
        },
        {
          "hostPath": "/mnt/decypharr",
          "containerPath": "/mnt/decypharr",
          "shared": true
        }
      ]
    }
  ]
}
