{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "ygege",
      "image": "uwucode/ygege:0.6.3",
      "internalPort": 8715,
      "isMain": true,
      "environment": {
        "YGG_USERNAME": "${YGEGE_USERNAME}",
        "YGG_PASSWORD": "${YGEGE_PASSWORD}",
        "BIND_IP": "0.0.0.0",
        "BIND_PORT": "8715",
        "LOG_LEVEL": "${YGEGE_LOG_LEVEL:-info}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        }
      ],
      "healthCheck": {
        "test": "curl --fail http://localhost:8715/health || exit 1",
        "interval": "1m30s",
        "timeout": "20s",
        "retries": 3
      }
    }
  ]
}
