{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "seerr",
            "image": "ghcr.io/seerr-team/seerr:develop",
            "internalPort": 5055,
            "isMain": true,
            "environment": [
                {
                    "key": "TZ",
                    "value": "${TZ}"
                },
                {
                    "key": "LOG_LEVEL",
                    "value": "info"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/config",
                    "containerPath": "/app/config"
                }
            ]
        }
    ]
}