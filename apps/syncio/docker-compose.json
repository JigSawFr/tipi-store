{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "syncio",
            "image": "ghcr.io/iamneur0/syncio:private",
            "isMain": true,
            "internalPort": 3000,
            "addPorts": [
                {
                    "containerPort": 4000,
                    "hostPort": 4000
                }
            ],
            "environment": [
                {
                    "key": "JWT_SECRET",
                    "value": "${SYNCIO_JWT_SECRET}"
                },
                {
                    "key": "ENCRYPTION_KEY",
                    "value": "${SYNCIO_ENCRYPTION_KEY}"
                },
                {
                    "key": "SYNCIO_PRIVATE_USERNAME",
                    "value": "${SYNCIO_PRIVATE_USERNAME}"
                },
                {
                    "key": "SYNCIO_PRIVATE_PASSWORD",
                    "value": "${SYNCIO_PRIVATE_PASSWORD}"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data",
                    "containerPath": "/app/data"
                }
            ]
        }
    ]
}
