{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "image": "ghcr.io/recyclarr/recyclarr:7.5.2",
      "name": "recyclarr",
      "isMain": true,
      "environment": [
        {
          "key": "RECYCLARR_CREATE_CONFIG",
          "value": "${RECYCLARR_CREATE_CONFIG-true}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "user": "${TIPI_UID}:${TIPI_GID}",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/config"
        }
      ]
    }
  ]
}
