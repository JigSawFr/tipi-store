{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "image": "ghcr.io/linuxserver/plex:1.43.0",
      "name": "plex",
      "isMain": true,
      "internalPort": 32400,
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "VERSION",
          "value": "docker"
        },
        {
          "key": "ADVERTISE_IP",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}/"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "networkMode": "host",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/transcode",
          "containerPath": "/transcode"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/data",
          "containerPath": "/media"
        }
      ]
    }
  ]
}
