{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "crosswatch",
            "image": "ghcr.io/cenodude/crosswatch:0.7.4",
            "isMain": true,
            "internalPort": 8787,
            "environment": [
                {
                    "key": "TZ",
                    "value": "${TZ}"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/config",
                    "containerPath": "/config"
                }
            ]
        }
    ]
}
