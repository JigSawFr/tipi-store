{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "comic-utils",
            "image": "allaboutduncan/comic-utils-web:latest",
            "internalPort": 5577,
            "isMain": true,
            "environment": [
                { "key": "FLASK_ENV", "value": "production" },
                { "key": "MONITOR", "value": "${COMICUTILS_MONITOR:-no}" },
                { "key": "PUID", "value": "1000" },
                { "key": "PGID", "value": "1000" },
                { "key": "TZ", "value": "${TZ}" }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/config",
                    "containerPath": "/config"
                },
                {
                    "hostPath": "${ROOT_FOLDER_HOST}/media/data/comics",
                    "containerPath": "/data"
                },
                {
                    "hostPath": "${ROOT_FOLDER_HOST}/media/downloads",
                    "containerPath": "/downloads"
                }
            ]
        }
    ]
}