{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "thingsboard",
      "image": "thingsboard/tb-postgres:4.2.1",
      "internalPort": 9090,
      "isMain": true,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/logs",
          "containerPath": "/var/log/thingsboard"
        }
      ],
      "addPorts": [
        {
          "containerPort": 1883,
          "hostPort": 1883,
          "tcp": true
        },
        {
          "containerPort": 7070,
          "hostPort": 7070,
          "tcp": true
        },
        {
          "containerPort": 5683,
          "hostPort": 5683,
          "udp": true
        },
        {
          "containerPort": 5684,
          "hostPort": 5684,
          "udp": true
        },
        {
          "containerPort": 5685,
          "hostPort": 5685,
          "udp": true
        },
        {
          "containerPort": 5686,
          "hostPort": 5686,
          "udp": true
        },
        {
          "containerPort": 5687,
          "hostPort": 5687,
          "udp": true
        },
        {
          "containerPort": 5688,
          "hostPort": 5688,
          "udp": true
        }
      ]
    }
  ]
}
