{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "image": "11notes/postgres:16",
      "name": "db",
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${POCKET_ID_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_BACKUP_SCHEDULE",
          "value": "0 3 * * *"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres/etc",
          "containerPath": "/postgres/etc"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres/var",
          "containerPath": "/postgres/var"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres/backup",
          "containerPath": "/postgres/backup"
        }
      ]
    },
    {
      "image": "11notes/pocket-id:1.15.0",
      "name": "pocket-id",
      "isMain": true,
      "internalPort": 1411,
      "dependsOn": [
        "db"
      ],
      "environment": [
        {
          "key": "APP_URL",
          "value": "${POCKET_ID_APP_URL:-${APP_PROTOCOL}://${APP_DOMAIN}}"
        },
        {
          "key": "TRUST_PROXY",
          "value": "${POCKET_ID_TRUST_PROXY}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "MAXMIND_LICENSE_KEY",
          "value": "${POCKET_ID_MAXMIND_LICENSE_KEY}"
        },
        {
          "key": "DB_PROVIDER",
          "value": "postgres"
        },
        {
          "key": "DB_CONNECTION_STRING",
          "value": "postgres://postgres:${POCKET_ID_DB_PASSWORD}@db:5432/postgres"
        }
      ],
      "healthCheck": {
        "test": "/app/pocket-id healthcheck",
        "interval": "90s",
        "timeout": "5s",
        "retries": 2,
        "startPeriod": "10s"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/pocket-id",
          "containerPath": "/pocket-id/var"
        }
      ]
    }
  ]
}
