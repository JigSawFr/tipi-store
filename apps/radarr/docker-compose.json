{
  "services": [
    {
      "name": "radarr",
      "image": "ghcr.io/11notes/radarr:5.25.0",
      "read_only": "true",
      "isMain": true,
      "internalPort": "7878",
      "environment": {
        "PUID": "1000",
        "PGID": "1000",
        "TZ": "${TZ}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "radarr/etc"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/media"
        }
      ],
      "tmpfs": [
        {
          "dst": "/tmp",
          "uid": "1000",
          "gid": "1000"
        }
      ]
    }
  ]
}