{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "network-optimizer",
            "image": "ghcr.io/ozark-connect/network-optimizer:1.4.4",
            "isMain": true,
            "internalPort": 8042,
            "networkMode": "host",
            "environment": [
                {
                    "key": "TZ",
                    "value": "${TZ}"
                },
                {
                    "key": "APP_PASSWORD",
                    "value": "${NETWORKOPTIMIZER_PASSWORD}"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data",
                    "containerPath": "/app/data"
                },
                {
                    "hostPath": "${APP_DATA_DIR}/logs",
                    "containerPath": "/app/logs"
                }
            ],
            "healthCheck": {
                "test": "curl -f http://localhost:8042/api/health || exit 1",
                "interval": "30s",
                "timeout": "10s",
                "retries": 3
            }
        }
    ]
}