{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "trakt-enhanced",
      "image": "docker.io/diabolino/trakt_enhanced:latest",
      "internalPort": 30009,
      "isMain": true,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "TRAKT_CLIENT_ID",
          "value": "${TRAKTENHANCED_CLIENT_ID}"
        },
        {
          "key": "TRAKT_CLIENT_SECRET",
          "value": "${TRAKTENHANCED_CLIENT_SECRET}"
        },
        {
          "key": "TMDB_API_KEY",
          "value": "${TRAKTENHANCED_TMDB_API_KEY}"
        },
        {
          "key": "SESSION_SECRET",
          "value": "${TRAKTENHANCED_SESSION_SECRET}"
        },
        {
          "key": "FULL_REBUILD_PASSWORD",
          "value": "${TRAKTENHANCED_REBUILD_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/app/config"
        }
      ]
    }
  ]
}
