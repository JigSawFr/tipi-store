{
  "services": [
    {
      "name": "tracktor",
      "image": "ghcr.io/javedh-dev/tracktor:latest",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "PORT",
          "value": "3000"
        },
        {
          "key": "DB_PATH",
          "value": "${TRACKTOR_DB_PATH:-/data/vehicles.db}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "healthCheck": {
        "test": "exit 0",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "startPeriod": "60s"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        }
      ]
    }
  ],
  "schemaVersion": 2
}