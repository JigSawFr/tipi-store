{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "image": "rendercv/rendercv:latest",
      "name": "rendercv",
      "isMain": true,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "user": "${TIPI_UID}:${TIPI_GID}",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/rendercv"
        }
      ],
      "command": "tail -f /dev/null"
    }
  ]
}
