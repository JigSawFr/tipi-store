{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "portall",
      "image": "need4swede/portall:latest",
      "internalPort": 8080,
      "isMain": true,
      "environment": [
        { "key": "SECRET_KEY", "value": "${PORTALL_SECRET_KEY}" },
        { "key": "DOCKER_ENABLED", "value": "${PORTALL_DOCKER_ENABLED}" },
        { "key": "HOST_IP", "value": "${PORTALL_HOST_IP}" },
        { "key": "TZ", "value": "${TZ}" }
      ],
      "volumes": [
        { "hostPath": "${APP_DATA_DIR}/data/instance", "containerPath": "/app/instance" }
      ]
    }
  ]
}
